		<div class="card mt-3">
			<div class="card-body">
				<h4 class="card-title m-0">{{ event.name }}</h4>
				<p class="card-text text-danger m-0">{{ event.start|format_datetime(pattern='d.M.yyyy HH:mm') }}
					aÅ¾
					{{ event.end|format_datetime(pattern='d.M.yyyy HH:mm') }}</p>
				{% if event.description != null %}
