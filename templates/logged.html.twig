{% extends "base.html.twig" %}

{% block body %}

	{% for post in posts|reverse %}
		<a href="{{ path('project.project', { id: post.project.id }) }}" class="nicelink">
			<div class="project-post-wrapper bg-light" id="post-{{ post.id }}">
				<div class="post-textcontent">
					<div class="project-post-profilepic">
						<img src="/img/userimg/{{ post.author.image }}" alt="">
					</div>
					<div class="project-post-content w-100">
						<p class="project-post-author w-100">{{ post.author.firstName ~ ' ' ~ post.author.lastName }}
							<br>
							<span class="badge bg-primary">{{ post.author.tag }}</span>
							<span class="badge bg-light text-dark">{{ post.author.class }}</span>
						</p>
						<p id="postText-{{ post.id }}">{{ post.text }}</p>
					</div>
				</div>
				<div class="post-media d-block mx-auto">
					<div class="fotorama mw-100">
						{% for img in post.media %}
							{% if img.type == "post" %}
								<img src="/img/media/{{ img.name }}" class="d-block mw-100 h-50 mx-auto" alt="post media">
							{% endif %}
						{% endfor %}
					</div>
				</div>
			</div>
		</a>
	{% endfor %}

	<p class="text-secondary text-center m-3">VÅ¡e zobrazeno!</p>

{% endblock %}
