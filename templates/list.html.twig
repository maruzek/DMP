{% extends "base.html.twig" %}

{% block body %}
	<div class="table-responsive">
		<table class="table table-striped table-hover text-center align-middle">
			<thead>
				<th>Jméno</th>
				<th>Hlavní správce</th>
				<th>Navštívit</th>
			</thead>
			<tbody>
				{% for project in allProjects %}
					<a href="{{ path('project.project', {id: project.id}) }}">
						<tr>
							<td>
								{{ project.name }}
							</td>
							<td>
								{{ project.admin.firstname ~ ' ' ~ project.admin.lastname }}
							</td>
							<td>
								<a href="{{ path('project.project', {id: project.id}) }}" class="btn btn-primary">Otevřít</a>
							</td>
						</tr>
					</a>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
