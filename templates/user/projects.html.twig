{% extends "base.html.twig" %}

{% block body %}
	{% if session.get('username') == username %}
		<h1 class="text-center m-2">Moje projekty</h1>
		<div class="fw-card-deck">
			<h3 class="mt-3">Projekty a kroužky, kterých jste členem</h3>
			{% for project in memberProjects %}
				<a href="{{ path('project.project', {id: project.id}) }}" class="fw-card-link">
					<div class="fw-card">
						{% if project.image != "" %}
							<img src="/img/projectimg/{{ project.image }}" class="img-fluid" alt="logo">
						{% else %}
							<img src="/img/logo1.jpg" class="img-fluid" alt="logo">
						{% endif %}
						<h5>{{ project.name }}</h5>
					</div>
				</a>
			{% endfor %}
		</div>

		<div class="fw-card-deck">
			<h3 class="mt-5">Projekty a kroužky, které sledujete</h3>
			{% for project in followProjects %}
				<a href="{{ path('project.project', {id: project.id}) }}" class="fw-card-link">
					<div class="fw-card">
						{% if project.image != "" %}
							<img src="/img/projectimg/{{ project.image }}" class="img-fluid" alt="logo">
						{% else %}
							<img src="/img/logo1.jpg" class="img-fluid" alt="logo">
						{% endif %}
						<h5>{{ project.name }}</h5>
					</div>
				</a>
			{% endfor %}
		</div>

	{% else %}
		<h1 class="text-center m-5">Pro přístup k této stránce nemáte oprávnění</h1>
		<a href="/" class="btn btn-secondary mx-auto d-block" style="width:20%">Zpět na úvodní stránku</a>
	{% endif %}
{% endblock %}
