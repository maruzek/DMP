<!DOCTYPE html>
<html>

	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Projekty SPŠ Ostrov
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
			<link rel="stylesheet" href="{{ asset('/styles/style.css') }}">
			<link rel="stylesheet" href="{{ asset('/styles/jquery-ui.min.css') }}">
		{% endblock %}
	</head>

	<body>
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="container-fluid">
				<a class="navbar-brand" href="/">SPŠ Ostrov</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="/">Domů</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="https://spsostrov.cz/" target="_blank">Stránky školy</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="https://titan.spsostrov.cz/" target="_blank">Titan</a>
						</li>
						{% if session.get('username') != "" %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('user.profile', {username: session.get('username')}) }}/odebirane">Odebírané</a>
							</li>
							<li class="nav-item dropdown">

								<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									{{ session.get('firstName') ~ ' ' ~ session.get('lastName') }}
								</a>
								<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
									{% for role in session.get('role') %}
										{% if role == "ROLE_ADMIN" %}
											<li>
												<a class="dropdown-item" href="{{ path('user.projects', {username: session.get('username')}) }}">
													<i class="fas fa-user-cog"></i>
													Moje projekty
												</a>
											</li>
											<li>
												<a class="dropdown-item" href="/projekt/novy">
													<i class="fas fa-plus"></i>
													Vytvořit nový projekt
												</a>
											</li>
											<li><hr class="dropdown-divider"></li>
										{% endif %}
									{% endfor %}
									<li>
										<a class="dropdown-item" href="{{ path('user.profile', {username: session.get('username')}) }}">
											<i class="fas fa-user"></i>
											Můj Profil
										</a>
									</li>
									<li>
										<a class="dropdown-item" href="#">
											<button type="button" class="btn btn-primary">Odhlásit se</button>
										</a>
									</li>
								</ul>

							</li>
						{% else %}
							<a href="/login">
								<button type="button" class="btn btn-outline-danger">Přihlásit se</button>
							</a>
						{% endif %}
					</ul>
					<form class="d-flex">
						<input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
						<button class="btn btn-outline-success" type="submit">Hledat</button>
					</form>
				</div>
			</div>
		</nav>
		<div class="container-fluid position-fixed top-0 start-0" style="z-index: 9999999"> {% block abs %}{% endblock %}
			</div>
			<div class="container-fluid p-0 m-0"> {% block fluid %}{% endblock %}
				</div>

				<div class="container-fluid" style="{% block style %}{% endblock %}; min-height: 94vh">
					<div class="container"> {% block body %}{% endblock %}
						</div>
					</div>


					{% block footer %}
						<footer class="container-fluid"></footer>
					{% endblock %}

					{% block javascripts %}
						<script src="{{ asset('/scripts/jQuery.js') }}"></script>
						<script src="{{ asset('/scripts/jquery-ui.js') }}"></script>
						<script src="{{ asset('/scripts/index.js') }}"></script>
						<script src="https://kit.fontawesome.com/868ac28d90.js" crossorigin="anonymous"></script>
						<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
					{% endblock %}
				</body>

			</html>
